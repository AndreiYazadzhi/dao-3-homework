<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>
            com.dao.homework.controllers.IndexController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>drivers</servlet-name>
        <servlet-class>
            com.dao.homework.controllers.driver.GetDriversController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>drivers</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createCar</servlet-name>
        <servlet-class>
            com.dao.homework.controllers.car.CreateCarController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createCar</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createDriver</servlet-name>
        <servlet-class>
            com.dao.homework.controllers.driver.CreateDriverController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createDriver</servlet-name>
        <url-pattern>/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createManufacturer</servlet-name>
        <servlet-class>
            com.dao.homework.controllers.manufacturer.CreateManufacturerController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createManufacturer</servlet-name>
        <url-pattern>/manufacturers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>
            com.dao.homework.controllers.car.AddDriverToCarController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cars</servlet-name>
        <servlet-class>
            com.dao.homework.controllers.car.GetCarsController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cars</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>manufacturers</servlet-name>
        <servlet-class>
            com.dao.homework.controllers.manufacturer.GetManufacturersController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>manufacturers</servlet-name>
        <url-pattern>/manufacturers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteManufacturer</servlet-name>
        <servlet-class>
            com.dao.homework.controllers.manufacturer.DeleteManufacturerController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteManufacturer</servlet-name>
        <url-pattern>/manufacturers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteCar</servlet-name>
        <servlet-class>
            com.dao.homework.controllers.car.DeleteCarController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteCar</servlet-name>
        <url-pattern>/cars/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteDriver</servlet-name>
        <servlet-class>
            com.dao.homework.controllers.driver.DeleteDriverController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteDriver</servlet-name>
        <url-pattern>/drivers/delete</url-pattern>
    </servlet-mapping>

</web-app>
